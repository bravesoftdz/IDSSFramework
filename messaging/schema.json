{
    "$schema": "http://json-schema.org/draft-04/schema#",

    "description": "Schema for ECODISTRICT messages.",

    "web-friendly-string": {
        "type": "string",
        "pattern": "^[a-z][a-z0-9-_]*$"
    },

    "moduleId": {"$ref": "#/web-friendly-string"},

    "getModulesRequest": {
        "type": "object",
        "properties": {
            "method": {"enum": ["getModules"]}
        }
    }

}
{
    "$schema": "http://json-schema.org/draft-04/schema#",

    "description": "Schema for ECODISTRICT messaging protocol.",

    "web-friendly-string": {
        "type": "string",
        "pattern": "^[a-z][a-z0-9-_]*$"
    },
    
    "moduleId": {"$ref": "#/web-friendly-string"},
    "kpiId": {"$ref": "#/web-friendly-string"},
    "variantId": {"type": "string"},

    "inputs": {
        
        "inputBase": {
            "type": "object",
            "properties": {
                "label": {"type": "string"},
                "order": {"type": ["number", "null"]}
            },
            "required": ["type", "label"]
        },

        "number": {
            "allOf": [
                {"$ref": "#/inputs/inputBase"},
                {
                    "properties": {
                        "type": {"enum": ["number"]},
                        "value": {"type": ["number", "null"]},
                        "min": {"type": ["number", "null"]},
                        "max": {"type": ["number", "null"]},
                        "unit": {"type": ["string", "null"]}
                    }
                }
            ]
        },

        "text": {
            "allOf": [
                {"$ref": "#/inputs/inputBase"},
                {
                    "properties": {
                        "type": {"enum": ["text"]},
                        "value": {"type": ["string", "null"]}
                    }
                }
            ]
        },

        "select": {
            "allOf": [
                {"$ref": "#/inputs/inputBase"},
                {
                    "properties": {
                        "type": {"enum": ["select"]},
                        "options": {
                            "type": "array",
                            "uniqueItems": true,
                            "items": {
                                "type": "object",
                                "properties": {
                                    "value": {"type": "string"},
                                    "label": {"type": "string"}
                                },
                                "required": ["value", "label"]
                            }
                        },
                        "value": {"type": ["string", "null"]}
                    },
                    "required": ["options"]
                }
            ]
        }
    },

    "inputSpecification": {
        "type": "object"
    },


    "getModulesRequest": {
        "type": "object",
        "properties": {
            "method": {"enum": ["getModules"]},
            "type": {"enum": ["request"]}
        },
        "required": ["method", "type"]
    },

    "getModulesResponse": {
        "type": "object",
        "properties": {
            "method": {"enum": ["getModules"]},
            "type": {"enum": ["response"]},
            "moduleId": {"$ref": "#/moduleId"},
            "name": {"type": "string"},
            "description": {"type": "string"},
            "kpiList": {
                "type": "array",
                "items": {"$ref": "#/kpiId"}
            }
        },
        "required": ["method", "type", "moduleId", "name", "description", "kpiList"]
    },

    "selectModuleRequest": {
        "type": "object",
        "properties": {
            "method": {"enum": ["selectModule"]},
            "type": {"enum": ["request"]},
            "moduleId": {"$ref": "#/moduleId"},
            "variantId": {"$ref": "#/variantId"},
            "kpiId": {"$ref": "#/kpiId"}
        },
        "required": ["method", "type", "moduleId", "variantId", "kpiId"]
    },

    "selectModuleResponse": {
        "type": "object",
        "properties": {
            "method": {"enum": ["selectModule"]},
            "type": {"enum": ["response"]},
            "moduleId": {"$ref": "#/moduleId"},
            "variantId": {"$ref": "#/variantId"},
            "kpiId": {"$ref": "#/kpiId"},
            "inputSpecification": {"$ref": "#/inputSpecification"}
        },
        "required": ["method", "type", "moduleId", "variantId", "kpiId", "inputSpecification"]
    },

    "startModuleRequest": {
        "type": "object",
        "properties": {
            "method": {"enum": ["startModule"]},
            "type": {"enum": ["request"]},
            "moduleId": {"$ref": "#/moduleId"},
            "variantId": {"$ref": "#/variantId"},
            "kpiId": {"$ref": "#/kpiId"},
            "inputData": {"type": "object"}
        },
        "required": ["method", "type", "moduleId", "variantId", "kpiId", "inputData"]
    },

    "startModuleResponse": {
        "type": "object",
        "properties": {
            "method": {"enum": ["startModule"]},
            "type": {"enum": ["response"]},
            "moduleId": {"$ref": "#/moduleId"},
            "variantId": {"$ref": "#/variantId"},
            "kpiId": {"$ref": "#/kpiId"},
            "status": {"enum": ["processing", "success", "failed"]},
            "info": {"type": "string"}
        },
        "required": ["method", "type", "moduleId", "variantId", "kpiId", "status"]
    },

    "moduleResult": {
        "type": "object",
        "properties": {
            "method": {"enum": ["moduleResult"]},
            "type": {"enum": ["result"]},
            "moduleId": {"$ref": "#/moduleId"},
            "variantId": {"$ref": "#/variantId"},
            "kpiId": {"$ref": "#/kpiId"},
            "outputs": {
                "type": "array",
                "items": {"type": "object"}
            }
        },
        "required": ["method", "type", "moduleId", "variantId", "kpiId", "outputs"]
    },

    "message": {
        "oneOf": [
            {"$ref": "#/getModulesRequest"},
            {"$ref": "#/getModulesResponse"},
            {"$ref": "#/selectModuleRequest"},
            {"$ref": "#/selectModuleResponse"},
            {"$ref": "#/startModuleRequest"},
            {"$ref": "#/startModuleResponse"},
            {"$ref": "#/moduleResult"}
        ]        
    }
    	
}
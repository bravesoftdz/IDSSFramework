{
    "$schema": "http://json-schema.org/draft-04/schema#",

    "description": "Schema for ECODISTRICT messages.",

    "definitions": {
        "web-friendly-string": {
            "type": "string",
            "pattern": "^[a-z][a-z0-9-_]*$"
        },
        
        "moduleId": {"$ref": "#/definitions/web-friendly-string"},
        "kpiId": {"$ref": "#/definitions/web-friendly-string"},
        "variantId": {"type": "string"},

        "inputSpecification": {"type": "object"},

        "getModulesRequest": {
            "type": "object",
            "properties": {
                "method": {"enum": ["getModules"]},
                "type": {"enum": ["request"]}
            },
            "required": ["method", "type"]
        },

        "getModulesResponse": {
            "type": "object",
            "properties": {
                "method": {"enum": ["getModules"]},
                "type": {"enum": ["response"]},
                "moduleId": {"$ref": "#/definitions/moduleId"},
                "name": {"type": "string"},
                "description": {"type": "string"},
                "kpiList": {
                    "type": "array",
                    "items": {"$ref": "#/definitions/kpiId"}
                }
            },
            "required": ["method", "type", "moduleId", "name", "description", "kpiList"]
        },

        "selectModuleRequest": {
            "type": "object",
            "properties": {
                "method": {"enum": ["selectModule"]},
                "type": {"enum": ["request"]},
                "moduleId": {"$ref": "#/definitions/moduleId"},
                "variantId": {"$ref": "#/definitions/variantId"},
                "kpiId": {"$ref": "#/definitions/kpiId"}
            },
            "required": ["method", "type", "moduleId", "variantId", "kpiId"]
        },

        "selectModuleResponse": {
            "type": "object",
            "properties": {
                "method": {"enum": ["selectModule"]},
                "type": {"enum": ["response"]},
                "moduleId": {"$ref": "#/definitions/moduleId"},
                "variantId": {"$ref": "#/definitions/variantId"},
                "kpiId": {"$ref": "#/definitions/kpiId"},
                "inputSpecification": {"$ref": "#/definitions/inputSpecification"}
            },
            "required": ["method", "type", "moduleId", "variantId", "kpiId", "inputSpecification"]
        },

        "startModuleRequest": {
            "type": "object",
            "properties": {
                "method": {"enum": ["startModule"]},
                "type": {"enum": ["request"]},
                "moduleId": {"$ref": "#/definitions/moduleId"},
                "variantId": {"$ref": "#/definitions/variantId"},
                "kpiId": {"$ref": "#/definitions/kpiId"},
                "inputData": {"type": "object"}
            },
            "required": ["method", "type", "moduleId", "variantId", "kpiId", "inputData"]
        },

        "startModuleResponse": {
            "type": "object",
            "properties": {
                "method": {"enum": ["startModule"]},
                "type": {"enum": ["response"]},
                "moduleId": {"$ref": "#/definitions/moduleId"},
                "variantId": {"$ref": "#/definitions/variantId"},
                "kpiId": {"$ref": "#/definitions/kpiId"},
                "status": {"enum": ["processing", "success", "failed"]},
                "info": {"type": "string"}
            },
            "required": ["method", "type", "moduleId", "variantId", "kpiId", "status"]
        },

        "moduleResult": {
            "type": "object",
            "properties": {
                "method": {"enum": ["moduleResult"]},
                "type": {"enum": ["result"]},
                "moduleId": {"$ref": "#/definitions/moduleId"},
                "variantId": {"$ref": "#/definitions/variantId"},
                "kpiId": {"$ref": "#/definitions/kpiId"},
                "outputs": {
                    "type": "array",
                    "items": {"type": "object"}
                }
            },
            "required": ["method", "type", "moduleId", "variantId", "kpiId", "outputs"]
        }
    },

    "oneOf": [
        {"$ref": "#/definitions/getModulesRequest"},
        {"$ref": "#/definitions/getModulesResponse"},
        {"$ref": "#/definitions/selectModuleRequest"},
        {"$ref": "#/definitions/selectModuleResponse"},
        {"$ref": "#/definitions/startModuleRequest"},
        {"$ref": "#/definitions/startModuleResponse"},
        {"$ref": "#/definitions/moduleResult"}
    ]
    	
}